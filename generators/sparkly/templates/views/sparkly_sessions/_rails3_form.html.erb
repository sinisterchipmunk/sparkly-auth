<%=form_for model, :url => model_session_path do |f|%>
  <p>
    <%=f.label model_config.key%><br/>
    <%=f.text_field model_config.key%>
  </p>
  
  <p>
    <%=f.label :password%><br/>
    <%=f.password_field :password, :value => ''%>
  </p>
  
  <%if Auth.remember_me.enabled?%>
    <p>
      <%=f.check_box :remember_me, :checked => false%>
      <%=f.label :remember_me%>
    </p>
  <%end%>
  
  <p>
    <%=f.submit "Sign in"%>
  </p>
<%end%>
